{
  "name": "kb-builder",
  "version": "0.1.0",
  "description": "Knowledge Base Builder - Guided KB creation with AI-powered research and visual analysis",
  "type": "module",
  "scripts": {
    "dev:client": "vite --config client/vite.config.ts",
    "dev:server": "tsx watch --env-file=.env server/index.ts",
    "dev": "concurrently \"pnpm dev:client\" \"pnpm dev:server\"",
    "build": "tsc && vite build --config client/vite.config.ts",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit"
